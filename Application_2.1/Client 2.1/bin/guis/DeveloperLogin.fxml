<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="loginWindow" alignment="CENTER" maxHeight="60.0" maxWidth="500.0" minHeight="600.0" minWidth="500.0" prefHeight="600.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DeveloperLoginController">
   <children>
      <Label maxWidth="1.7976931348623157E308" prefWidth="250.0" text="Username">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="usernameTxt" maxWidth="1.7976931348623157E308" prefWidth="250.0">
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </TextField>
      <Label maxWidth="1.7976931348623157E308" prefWidth="250.0" text="Password">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <PasswordField fx:id="passwordTxt">
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </PasswordField>
      <Label fx:id="errorLbl" maxWidth="1.7976931348623157E308" prefWidth="250.0" textFill="RED">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <Button fx:id="loginBtn" mnemonicParsing="false" text="Login">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
         </padding>
      </Button>
      <Label text="default username : admin" />
      <Label text="default password : password" />
   </children>
   <padding>
      <Insets bottom="50.0" left="75.0" right="75.0" top="50.0" />
   </padding>
</VBox>
